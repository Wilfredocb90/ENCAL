<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/check_box_pregunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text="@string/sec400_p407"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <CheckBox
                android:id="@+id/sec400_p407_ck1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sec400_p407_sp1"
                />
            <CheckBox
                android:id="@+id/sec400_p407_ck2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sec400_p407_sp2"
                />
            <CheckBox
                android:id="@+id/sec400_p407_ck3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sec400_p407_sp3"
                />
            <CheckBox
                android:id="@+id/sec400_p407_ck4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sec400_p407_sp4"
                />
            <CheckBox
                android:id="@+id/sec400_p407_ck5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sec400_p407_sp5"
                />
            <CheckBox
                android:id="@+id/sec400_p407_ck6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sec400_p407_sp6"
                />
            <CheckBox
                android:id="@+id/sec400_p407_ck7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sec400_p407_sp7"
                />
            <EditText
                android:id="@+id/txtEspecifique_p407"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Especifique"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>